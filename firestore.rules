rules_version = '2';
service cloud.firestore {
  match /databases/{db}/documents {
    function isSignedIn() { return request.auth != null; }
    function isOwner() {
      return isSignedIn() &&
             get(/databases/$(db)/documents/owners/$(request.auth.uid)).data.role in ['owner','superadmin'];
    }

    match /owners/{ownerUid} {
      allow read, create, update, delete: if isOwner();
    }

    match /orgs/{orgId} {
      allow read, create, update, delete: if isOwner();
    }

    match /orgUsers/{orgUserId} {
      allow read, create, update, delete: if isOwner();
    }

    match /subscriptions/{orgId} {
      allow read, create, update, delete: if isOwner();
    }

    match /auditLogs/{logId} {
      allow read: if isOwner();
      allow create: if isSignedIn();
      allow delete: if false;
    }

    match /apiKeys/{keyId} { allow read, create, update, delete: if isOwner(); }
    match /webhooks/{hookId} { allow read, create, update, delete: if isOwner(); }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
